<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@taglib uri="http://www.springframework.org/tags/form" prefix="form" %> <!-- springmvc的from标签 -->
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %><!-- jstl标签 -->
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn" %>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>发布信息更新页面</title>
<script type="text/javascript" src="${pageContext.request.contextPath}/js/jquery-2.2.3.min.js"></script>
<script type="text/javascript">
$(document).ready(
		function(){
			$("#provinceid").change(
				function (){
					var provincecode = jQuery("#provinceid option:selected").val();
					$.ajax({ 
						url: "${pageContext.request.contextPath}/matchs/querycity.do",
						cache:false,
						data:"provincecode="+provincecode,//encodeURI(encodeURI(selValue)),
						dataType:"json",
						type:"post",
						success: function(data){
				       var ln= $("#city option").size();	
				       $("#city").empty(); 
						/* while(ln > 1){
							document.getElementById("city").remove(document.getElementById("city").options.length - 1);						
							 --ln; 
							} */
							$("#city").append("<option>"+"全部"+"</option>"); 
						for(var i =0; i < data.length; i++){
							$("#city").append("<option value="+data[i].name+">"+data[i].name+"</option>"); 
							}
				      }});
				}		
			)
		}	  
	  )
</script>
</head>
<body>
<form action="${pageContext.request.contextPath}/matchs/edit.do" id="frm" name="frm">
	项目发布人：<input type="text"  id="issuer" name="issuer" value="${matchs.issuer}"><br/><br/>
	项目发布时间：<input type="text"  id="issueTime" name="issueTime" value="${matchs.issueTime}"><br/><br/>
	项目名称：<input type="text"  id="projectName" name="projectName" value="${matchs.projectName}"><br/><br/>
	企业名称：<input type="text"  id="companyName" name="companyName" value="${matchs.companyName}"><br/><br/>
	项目类型：<input type="text"  id="projectFinancingMode" name="projectFinancingMode" value="${matchs.projectFinancingMode}"><br/><br/>
	合作模式： <select id="cooperationMode" name="cooperationMode">
				<c:if test="${matchs.cooperationMode=='合资'}">
				<option >合资</option>
				<option>独资</option>
				<option>合作</option>
				</c:if>
				<c:if test="${matchs.cooperationMode=='独资'}">
				<option>独资</option>
				<option>合资</option>
				<option>合作</option>
				</c:if>			
				<c:if test="${matchs.cooperationMode=='合作'}">
				<option>合作</option>
				<option>合资</option>
				<option>独资</option>
				</c:if>
		   </select><br/><br/>
	项目所属行业：<input type="text"  id="projectBusiness" name="projectBusiness" value="${matchs.projectBusiness}"><br/><br/>
	项目地区：
	<select id="provinceid" name="projectArea">
		<option>${matchs.projectArea}</option>
		<c:forEach var="province" items="${plist}">
			<option value="${province.code}">${province.name}</option>
		</c:forEach>
	</select>
	--
	<select id="city" name="city">
		<option>${matchs.city}</option>		
	</select><br/><br/>
	投资总额：<input type="text"  id="fundBudget" name="fundBudget" value="${matchs.fundBudget}"><br/><br/>
	匹配度：<input type="text"  id="matchDegree" name="matchDegree" value="${matchs.matchDegree}"><br/><br/>
	项目主要内容：<input type="text"  id="projectContent" name="projectContent" value="${matchs.projectContent}"><br/><br/>
	项目所属单位：<input type="text"  id="projectUnit" name="projectUnit" value="${matchs.projectUnit}"><br/><br/>
	联系人：<input type="text"  id="linkman" name="linkman" value="${matchs.linkman}"><br/><br/>
	联系电话：<input type="text"  id="phone" name="phone" value="${matchs.phone}"><br/><br/>
	 联系邮箱：<input type="text"  id="email" name="email" value="${matchs.email}"><br/><br/>
	 联系地址：<input type="text"  id="address" name="address" value="${matchs.address}"><br/><br/>
	传真号码：<input type="text"  id="faxNumber" name="faxNumber" value="${matchs.faxNumber}"><br/><br/>
	<input type="hidden" id="id" name="id" value="${matchs.id}">
    <input type="submit" value="更新"> <a href="${pageContext.request.contextPath}/matchs/findAll.do"><input type="button" value="返回"></a>	
    </form>
</body>
</html>