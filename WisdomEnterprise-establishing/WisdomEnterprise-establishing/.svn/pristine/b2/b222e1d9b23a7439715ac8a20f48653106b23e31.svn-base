    public void insertSelective(UserU userU){
        SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd hh:mm:ss");
        userU.setEnabled(1);
        userU.setStatus("government");
        userU.setCreatetime(sdf.format(new Date()));
        userU.setUpdatetime(sdf.format(new Date()));
        userUMapper.insertUserU(userU);
        userU.setUid(userUMapper.getUserUByName(userU.getUname()).getUid());
        userUMapper.insertUserUExtend(userU);
        userUMapper.insertUserUDept(userU);
    }
